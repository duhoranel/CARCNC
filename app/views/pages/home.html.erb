<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.mopar.ca/assets/img/2020/hero-slides/accessories/gladiator-bg-xl.jpg);">
  <div class="container">
    <h1>Welcome on CarCNC</h1>
    <p>Ready for a ride ?</p>
        <div class=“btn_container”>
          <%= form_tag ‘/cars’, method: :get, class: ‘my_class’ do %>
          <%= text_field_tag ’location’, nil, placeholder: ‘Location’, class: ‘location_btn ’ %>
          <%= date_field “start_date”, “date_input_name”, class: ‘first_date_btn’ %>
          <%= date_field “end_date”, “date_input_name”, class: ‘last_date_btn’ %>
          <%= submit_tag ‘submit’, class: ‘submit’ %>
          <% end %>
        </div>
    <button name=“button” type=“submit” class=“btn btn-flat”>
    <i class=“fas fa-search”></i>
    </button>
    </div>
</div>

